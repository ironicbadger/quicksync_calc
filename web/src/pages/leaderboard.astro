---
import Layout from '../layouts/Layout.astro';

const API_URL = import.meta.env.PUBLIC_API_URL || 'https://quicksync-api.ktz.me';
---

<Layout title="CPU Leaderboard - QuickSync Benchmarks">
  <div class="container">
    <div class="page-header">
      <h1>CPU Leaderboard</h1>
      <p class="subtitle">Ranked by overall QuickSync performance score</p>
    </div>

    <div class="controls">
      <div class="control-group">
        <label for="filter-arch">Architecture:</label>
        <select id="filter-arch">
          <option value="">All Architectures</option>
        </select>
      </div>
    </div>

    <div class="leaderboard-card">
      <table id="leaderboard-table">
        <colgroup>
          <col style="width: 60px;">
          <col style="width: 45%;">
          <col style="width: 35%;">
          <col style="width: 80px;">
        </colgroup>
        <thead>
          <tr>
            <th>#</th>
            <th>CPU</th>
            <th>Architecture</th>
            <th class="numeric">Score</th>
          </tr>
        </thead>
        <tbody id="leaderboard-body">
          <tr>
            <td colspan="4" class="loading-cell">Loading...</td>
          </tr>
        </tbody>
      </table>
      <div id="show-more-container" class="show-more-container" style="display: none;">
        <button id="show-more-btn" class="show-more-btn">Show All CPUs</button>
      </div>
    </div>

    <div class="methodology-section">
      <h2>Scoring Methodology</h2>

      <div class="methodology-card">
        <h3>Overall Score (0-100)</h3>
        <p>
          Each CPU receives a composite score from 0-100 based on three weighted factors.
          Higher scores indicate better QuickSync hardware encoding performance.
        </p>
      </div>

      <div class="methodology-grid">
        <div class="methodology-card">
          <div class="weight-badge">40%</div>
          <h3>Performance</h3>
          <p>
            Percentile rank of average FPS across all benchmark tests.
            Measures raw encoding speed — how quickly the GPU can transcode video.
          </p>
        </div>

        <div class="methodology-card">
          <div class="weight-badge">35%</div>
          <h3>Efficiency</h3>
          <p>
            Percentile rank of FPS per watt consumed during encoding.
            Rewards CPUs that achieve high performance without excessive power draw.
          </p>
        </div>

        <div class="methodology-card">
          <div class="weight-badge">25%</div>
          <h3>Codec Support</h3>
          <p>
            Percentage of available test types completed.
            CPUs with broader codec support (H.264, HEVC 8-bit, HEVC 10-bit, etc.) score higher.
          </p>
        </div>
      </div>

      <div class="methodology-card">
        <h3>Score Calculation</h3>
        <p>The final score is calculated as:</p>
        <code class="formula">Score = (Performance × 0.40) + (Efficiency × 0.35) + (Codec Support × 0.25)</code>
        <p>
          All sub-scores are normalized to 0-100 using percentile ranking against the entire database.
          This means scores are relative — as more CPUs are added, rankings may shift.
        </p>
      </div>

      <div class="methodology-card">
        <h3>Data Sources</h3>
        <p>
          Benchmark results come from community submissions running the
          <a href="https://github.com/ironicbadger/quicksync_calc">quicksync-benchmark.sh</a> script.
          Results include FPS, encoding speed, and power consumption (where available) across
          standardized test files and codec configurations.
        </p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .controls {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .control-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .control-group label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .control-group select {
    padding: 0.375rem 0.75rem;
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    color: var(--color-text);
    font-family: var(--font-mono);
    font-size: 0.875rem;
  }

  .leaderboard-card {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  #leaderboard-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.875rem;
    table-layout: fixed;
  }

  #leaderboard-table th,
  #leaderboard-table td {
    padding: 0.75rem 1rem;
    text-align: left;
    vertical-align: middle;
  }

  #leaderboard-table th {
    border-bottom: 2px solid var(--color-border);
    color: var(--color-text-muted);
    font-weight: 500;
    white-space: nowrap;
  }

  #leaderboard-table td {
    border-bottom: 1px solid var(--color-border);
  }

  #leaderboard-table th.numeric,
  #leaderboard-table td.numeric {
    text-align: right;
  }

  #leaderboard-table tbody tr:hover {
    background-color: rgba(59, 130, 246, 0.1);
  }

  .loading-cell {
    text-align: center;
    padding: 3rem 1rem !important;
    color: var(--color-text-muted);
  }

  .show-more-container {
    padding: 1rem;
    text-align: center;
    border-top: 1px solid var(--color-border);
  }

  .show-more-btn {
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    padding: 0.5rem 1.5rem;
    border-radius: 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    cursor: pointer;
    transition: background-color 0.15s, border-color 0.15s;
  }

  .show-more-btn:hover {
    background-color: var(--color-bg-secondary);
    border-color: var(--color-accent);
  }

  .rank-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    font-weight: 600;
    font-size: 0.8rem;
  }

  .rank-1 {
    background: linear-gradient(135deg, #ffd700, #ffb800);
    color: #000;
  }

  .rank-2 {
    background: linear-gradient(135deg, #c0c0c0, #a0a0a0);
    color: #000;
  }

  .rank-3 {
    background: linear-gradient(135deg, #cd7f32, #b87333);
    color: #fff;
  }

  .rank-other {
    background-color: var(--color-bg);
    color: var(--color-text-muted);
  }

  .score-badge {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
    min-width: 2rem;
    text-align: center;
  }

  .score-badge.score-high {
    background-color: rgba(34, 197, 94, 0.2);
    color: #22c55e;
  }

  .score-badge.score-mid {
    background-color: rgba(234, 179, 8, 0.2);
    color: #eab308;
  }

  .score-badge.score-low {
    background-color: rgba(239, 68, 68, 0.2);
    color: #ef4444;
  }

  .cpu-name {
    font-weight: 500;
  }

  .cpu-link {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.15s;
  }

  .cpu-link:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  /* Methodology Section */
  .methodology-section {
    margin-top: 3rem;
  }

  .methodology-section h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .methodology-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .methodology-card {
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1.25rem;
    margin-bottom: 1rem;
  }

  .methodology-card h3 {
    font-size: 1rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .methodology-card p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 0.5rem;
  }

  .methodology-card p:last-child {
    margin-bottom: 0;
  }

  .methodology-card a {
    color: var(--color-accent);
  }

  .weight-badge {
    display: inline-block;
    background-color: var(--color-accent);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .formula {
    display: block;
    background-color: var(--color-bg);
    padding: 0.75rem 1rem;
    border-radius: 0.375rem;
    margin: 0.75rem 0;
    font-size: 0.8rem;
    overflow-x: auto;
  }

  @media (max-width: 768px) {
    #leaderboard-table th:nth-child(3),
    #leaderboard-table td:nth-child(3),
    #leaderboard-table colgroup col:nth-child(3) {
      display: none;
    }

    .methodology-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script define:vars={{ API_URL }}>
  let allScores = [];
  let architectures = [];
  let showAll = false;
  const INITIAL_COUNT = 20;

  // Strip Intel branding from CPU names
  function stripIntelBranding(cpuName) {
    return cpuName
      .replace(/Intel\(R\)\s*/gi, '')
      .replace(/Core\(TM\)\s*/gi, '')
      .replace(/\s+CPU\s*@\s*[\d.]+GHz/gi, '')
      .replace(/\s*\d{1,2}th Gen\s*/gi, '')
      .replace(/\s+/g, ' ')
      .trim();
  }

  // Generate a link to the CPU's generation page
  function getCpuLink(architecture, generation) {
    // Arc GPUs link to Arc pages
    if (architecture && (architecture.includes('Arc') || architecture === 'Alchemist' || architecture === 'Battlemage')) {
      return '/gpu/arc/all';
    }
    // Meteor Lake links to Ultra Series 1
    if (architecture === 'Meteor Lake') {
      return '/cpu/gen/ultra-1';
    }
    // Arrow Lake or Lunar Lake links to Ultra Series 2
    if (architecture === 'Arrow Lake' || architecture === 'Lunar Lake') {
      return '/cpu/gen/ultra-2';
    }
    // Standard generations 2-14
    if (generation && generation >= 2 && generation <= 14) {
      return `/cpu/gen/${generation}`;
    }
    return null;
  }

  // Render CPU name with optional link to generation page
  function renderCpuName(cpuRaw, architecture, generation) {
    const displayName = stripIntelBranding(cpuRaw);
    const link = getCpuLink(architecture, generation);
    if (link) {
      return `<a href="${link}" class="cpu-link" title="${cpuRaw}">${displayName}</a>`;
    }
    return `<span title="${cpuRaw}">${displayName}</span>`;
  }

  // Fetch scores from API
  async function fetchScores() {
    try {
      const res = await fetch(`${API_URL}/api/scores`);
      const data = await res.json();

      if (data.success) {
        allScores = data.scores;
        architectures = [...new Set(allScores.map(s => s.architecture).filter(Boolean))].sort();
        populateArchFilter();
        renderLeaderboard();
      }
    } catch (e) {
      console.error('Failed to fetch scores:', e);
      document.getElementById('leaderboard-body').innerHTML =
        '<tr><td colspan="4" class="loading-cell">Failed to load data</td></tr>';
    }
  }

  // Populate architecture filter dropdown
  function populateArchFilter() {
    const select = document.getElementById('filter-arch');
    architectures.forEach(arch => {
      const option = document.createElement('option');
      option.value = arch;
      option.textContent = arch;
      select.appendChild(option);
    });
  }

  // Get filtered scores
  function getFilteredScores() {
    const filterArch = document.getElementById('filter-arch').value;

    let filtered = allScores;
    if (filterArch) {
      filtered = filtered.filter(s => s.architecture === filterArch);
    }

    return [...filtered].sort((a, b) => b.score - a.score);
  }

  // Render the leaderboard table
  function renderLeaderboard() {
    const sorted = getFilteredScores();
    const tbody = document.getElementById('leaderboard-body');
    const showMoreContainer = document.getElementById('show-more-container');
    const showMoreBtn = document.getElementById('show-more-btn');

    if (sorted.length === 0) {
      tbody.innerHTML = '<tr><td colspan="4" class="loading-cell">No CPUs found</td></tr>';
      showMoreContainer.style.display = 'none';
      return;
    }

    // Determine how many to show
    const displayCount = showAll ? sorted.length : Math.min(INITIAL_COUNT, sorted.length);
    const displayList = sorted.slice(0, displayCount);

    tbody.innerHTML = displayList.map((cpu, index) => {
      const rank = index + 1;
      const rankClass = rank <= 3 ? `rank-${rank}` : 'rank-other';
      const scoreClass = cpu.score >= 70 ? 'score-high' : cpu.score >= 40 ? 'score-mid' : 'score-low';
      const cpuHtml = renderCpuName(cpu.cpu_raw, cpu.architecture, cpu.cpu_generation);

      return `
        <tr>
          <td><span class="rank-badge ${rankClass}">${rank}</span></td>
          <td class="cpu-name">${cpuHtml}</td>
          <td>${cpu.architecture || '-'}</td>
          <td class="numeric"><span class="score-badge ${scoreClass}">${cpu.score}</span></td>
        </tr>
      `;
    }).join('');

    // Show/hide "show more" button
    if (sorted.length > INITIAL_COUNT) {
      showMoreContainer.style.display = 'block';
      showMoreBtn.textContent = showAll
        ? `Show Top ${INITIAL_COUNT}`
        : `Show All ${sorted.length} CPUs`;
    } else {
      showMoreContainer.style.display = 'none';
    }
  }

  // Event listeners
  document.getElementById('filter-arch').addEventListener('change', () => {
    showAll = false; // Reset to top 20 when filter changes
    renderLeaderboard();
  });

  document.getElementById('show-more-btn').addEventListener('click', () => {
    showAll = !showAll;
    renderLeaderboard();
  });

  // Initialize
  fetchScores();
</script>
