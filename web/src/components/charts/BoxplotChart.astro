---
interface Props {
  id: string;
  title: string;
  metric: 'avg_fps' | 'avg_watts' | 'fps_per_watt';
  yLabel: string;
}

const { id, title, metric, yLabel } = Astro.props;
---

<div class="chart-container card">
  <h3 style="margin-bottom: 1rem; font-size: 1rem; color: var(--color-text-muted);">{title}</h3>
  <div class="chart-wrapper">
    <canvas id={id} data-metric={metric} data-ylabel={yLabel}></canvas>
  </div>
</div>

<style>
  .chart-container {
    min-height: 350px;
  }

  .chart-wrapper {
    position: relative;
    height: 300px;
  }
</style>
